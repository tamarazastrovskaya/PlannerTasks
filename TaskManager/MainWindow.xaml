<Window x:Class="TaskManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        mc:Ignorable="d"
        Title="TaskManager" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <DataGrid x:Name="dgList" FontSize="14" FontWeight="Bold" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn IsReadOnly="True" Header="StartDate" Width="180"/>
                <DataGridCheckBoxColumn IsReadOnly="True" Header="Status" Width="80"/>
                <DataGridTextColumn IsReadOnly="False" Header="Task" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        
     </Grid>
</Window>
